<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.cvds.sampleprj.dao.mybatis.mappers.UsuarioMapper">
    <resultMap type='Usuario' id='UsuarioResult'>

        <id property='correo' column='correo'/>
        <result property='nombreUsuario' column='nombreusuario'/>
        <result property='clave' column='clave'/>
        <result property='nombre' column='nombre'/>
        <result property='apellido' column='apellido'/>
        <result property='estado' column='estado'/>       
        
    </resultMap>

    <select parameterType="map" id="consultarUsuario" resultMap="UsuarioResult">

        select
            u.correo,
            u.nombreusuario,
            u.clave,
            u.nombre,
            u.apellido,
            u.estado
            FROM usuario as u
            where u.correo=#{corr}

    </select>

    <select parameterType="map" id="consultarUsuarios" resultMap="UsuarioResult">

        SELECT
            u.correo,
            u.nombreusuario,
            u.clave,
            u.nombre,
            u.apellido,
            u.estado
            FROM usuario AS u

    </select>
</mapper>